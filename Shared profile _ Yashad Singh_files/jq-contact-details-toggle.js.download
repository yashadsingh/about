$( document ).ready(() => {
    $('#view-infos-toggle').click(() => {
        $('.infos-list').slideDown(200);
        $('#view-infos-toggle').hide();
        $('#hide-infos-toggle').show();
    })
    $('#hide-infos-toggle').click(() => {
        $('.infos-list').slideUp(200);
        $('#hide-infos-toggle').hide();
        $('#view-infos-toggle').show();
    })
});